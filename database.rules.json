{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      },
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "privateChats": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "groupChats": {
      ".read": "auth != null",
      "$gid": {
        "name": {
          ".read": "auth != null",
          ".write": "root.child('groupChats/'+$gid+'/creator').val() === auth.uid"
        },
        "creator": {
          ".read": "auth != null",
          ".write": "false"
        },
        "createdAt": {
          ".read": "auth != null",
          ".write": "false"
        },
        "members": {
          ".read": "root.child('groupChats/'+$gid+'/members/'+auth.uid).exists()",
          ".write": "root.child('groupChats/'+$gid+'/creator').val() === auth.uid"
        },
        "messages": {
          ".read": "root.child('groupChats/'+$gid+'/members/'+auth.uid).exists()",
          ".write": "root.child('groupChats/'+$gid+'/members/'+auth.uid).exists()"
        }
      }
    },
    "userGroups": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "friends": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "groupsByCreator": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "privateTyping": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "groupTyping": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    ".read": "auth != null",
    ".write": "auth != null"
  }
}
