{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "privateChats": {
      "$chatId": {
        ".read": "auth != null && ($chatId.includes(auth.uid))",
        ".write": "auth != null && ($chatId.includes(auth.uid))"
      }
    },
    "privateTyping": {
      "$chatId": {
        ".read": "auth != null && ($chatId.includes(auth.uid))",
        ".write": "auth != null && ($chatId.includes(auth.uid))"
      }
    },
    "groupChats": {
      "$groupId": {
        ".read": "auth != null && data.child('members/' + auth.uid).val() === true",
        ".write": "auth != null && (newData.child('members/' + auth.uid).val() === true || data.child('members/' + auth.uid).val() === true)",
        "messages": {
          ".read": "auth != null && root.child('groupChats/' + $groupId + '/members/' + auth.uid).val() === true",
          ".write": "auth != null && root.child('groupChats/' + $groupId + '/members/' + auth.uid).val() === true"
        },
        "members": {
          ".read": "auth != null && data.parent().child('members/' + auth.uid).val() === true",
          ".write": "auth != null && data.parent().child('members/' + auth.uid).val() === true"
        }
      }
    },
    "userGroups": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        "$groupId": {
          ".write": "auth != null && auth.uid === $uid && newData.val() === true"
        }
      }
    },
    "groupsByCreator": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        "$groupId": {
          ".write": "auth != null && auth.uid === $uid && newData.val() === true"
        }
      }
    },
    "groupTyping": {
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}
