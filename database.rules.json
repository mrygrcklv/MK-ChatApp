{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "contacts": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "pendingMessages": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        "$fromUid": {
          ".write": "auth != null && auth.uid === $fromUid"
        }
      }
    },
    "userPrivateChats": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        "$chatId": {
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },
    "privateChats": {
      "$chatId": {
        ".read": "auth != null && (auth.uid == $chatId.split('_')[0] || auth.uid == $chatId.split('_')[1])",
        ".write": "auth != null && (auth.uid == $chatId.split('_')[0] || auth.uid == $chatId.split('_')[1])"
      }
    },
    "privateTyping": {
      "$chatId": {
        ".read": "auth != null && (auth.uid == $chatId.split('_')[0] || auth.uid == $chatId.split('_')[1])",
        ".write": "auth != null && (auth.uid == $chatId.split('_')[0] || auth.uid == $chatId.split('_')[1])"
      }
    },
    "groupChats": {
      ".read": "auth != null",
      "$groupId": {
        ".read": "auth != null && data.child('members/' + auth.uid).val() === true",
        ".write": "auth != null && ((!data.exists() && newData.child('members/' + auth.uid).val() === true) || (data.exists() && data.child('members/' + auth.uid).val() === true))",
        "messages": {
          ".read": "auth != null && root.child('groupChats/' + $groupId + '/members/' + auth.uid).val() === true",
          ".write": "auth != null && root.child('groupChats/' + $groupId + '/members/' + auth.uid).val() === true"
        },
        "members": {
          ".read": "auth != null && data.parent().child('members/' + auth.uid).val() === true",
          ".write": "auth != null && data.parent().child('members/' + auth.uid).val() === true"
        },
        "name": {
          ".read": "auth != null && data.parent().child('members/' + auth.uid).val() === true",
          ".write": "auth != null && data.parent().child('members/' + auth.uid).val() === true"
        }
      }
    },
    "userGroups": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        "$groupId": {
          ".write": "auth != null && auth.uid === $uid && newData.val() === true"
        }
      }
    },
    "groupsByCreator": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        "$groupId": {
          ".write": "auth != null && auth.uid === $uid && newData.val() === true"
        }
      }
    },
    "groupTyping": {
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}
